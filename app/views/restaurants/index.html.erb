<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
	<article class="restaurant">
	 	<h2> <%= restaurant.name %> </h2>
	 	<h3> Average Rating: <%= star_rating(restaurant.average_rating) %> </h3>
	 	<h3> <%= restaurant.cuisine %> </h3>

	 	<ul> 
	 		<% restaurant.reviews.each do |review| %>
	 			<li>
	 				<%= "#{review.thoughts} (#{star_rating(review.rating)})" %> 
	 				<button>
		 				<%= link_to "Delete review for #{restaurant.name}",restaurant_review_path(restaurant, review), method: :delete %>
	 				</button>
	 			</li>
 			<% end %>
 		</ul>

	 	<button>
	 		<%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
	 	</button>
	 	<button>
	 		<%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
	 	</button>
	 	<button> 
	 		<%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
	 	</button>
	 </article>
	<% end %>
<% else %>
	No restaurants yet
<% end %>

<button><%= link_to 'Add a restaurant', new_restaurant_path %></button>
